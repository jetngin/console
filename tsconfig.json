{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2016"
        ],
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
, "jet"    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/test.manual.ts",
        "coverage/**"
    ]
}